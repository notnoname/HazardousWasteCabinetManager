<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/background" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/llRightMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/constraintLayout"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnNoManage"
                android:layout_width="230px"
                android:layout_height="wrap_content"
                android:background="@drawable/background_button"
                android:onClick="onFirstTakeInButtonClick"
                android:text="@string/no_manage"
                android:textColor="@color/white"
                android:textSize="32px"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnIn"
                android:layout_width="230px"
                android:layout_height="wrap_content"
                android:layout_marginTop="24px"
                android:background="@drawable/background_button"
                android:onClick="onReturnAfterUseButtonClick"
                android:text="@string/take_in"
                android:textColor="@color/white"
                android:textSize="32px"
                app:layout_constraintEnd_toEndOf="@+id/btnNoManage"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/btnNoManage"
                app:layout_constraintTop_toBottomOf="@+id/btnNoManage" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnOut"
                android:layout_width="230px"
                android:layout_height="wrap_content"
                android:layout_marginTop="24px"
                android:background="@drawable/background_button"
                android:onClick="onTakeOutButtonClick"
                android:text="@string/take_out"
                android:textColor="@color/white"
                android:textSize="32px"
                app:layout_constraintEnd_toEndOf="@+id/btnIn"
                app:layout_constraintStart_toStartOf="@+id/btnIn"
                app:layout_constraintTop_toBottomOf="@+id/btnIn" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnStockQuery"
                android:layout_width="230px"
                android:layout_height="wrap_content"
                android:layout_marginTop="24px"
                android:background="@drawable/background_button"
                android:onClick="onInventoryQueryButtonClick"
                android:text="@string/stock_query"
                android:textColor="@color/white"
                android:textSize="32px"
                app:layout_constraintEnd_toEndOf="@+id/btnOut"
                app:layout_constraintStart_toStartOf="@+id/btnOut"
                app:layout_constraintTop_toBottomOf="@+id/btnOut" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnInOutQuery"
                android:layout_width="230px"
                android:layout_height="wrap_content"
                android:layout_marginTop="24px"
                android:background="@drawable/background_button"
                android:onClick="onStandingBookQueryButtonClick"
                android:text="@string/in_out_query"
                android:textColor="@color/white"
                android:textSize="32px"
                app:layout_constraintEnd_toEndOf="@+id/btnStockQuery"
                app:layout_constraintStart_toStartOf="@+id/btnStockQuery"
                app:layout_constraintTop_toBottomOf="@+id/btnStockQuery" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCamera"
                android:layout_width="230px"
                android:layout_height="wrap_content"
                android:layout_marginTop="24px"
                android:background="@drawable/background_button"
                android:onClick="onCameraButtonClick"
                android:text="@string/watch_camera"
                android:textColor="@color/white"
                android:textSize="32px"
                app:layout_constraintEnd_toEndOf="@+id/btnInOutQuery"
                app:layout_constraintStart_toStartOf="@+id/btnInOutQuery"
                app:layout_constraintTop_toBottomOf="@+id/btnInOutQuery" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSubBoard"
                android:layout_width="230px"
                android:layout_height="wrap_content"
                android:layout_marginTop="24px"
                android:background="@drawable/background_button"
                android:onClick="onSubBoardButtonClick"
                android:text="@string/sub_board_info"
                android:textColor="@color/white"
                android:textSize="32px"
                app:layout_constraintEnd_toEndOf="@+id/btnCamera"
                app:layout_constraintStart_toStartOf="@+id/btnCamera"
                app:layout_constraintTop_toBottomOf="@+id/btnCamera" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLockManage"
                android:layout_width="230px"
                android:layout_height="wrap_content"
                android:layout_marginTop="24px"
                android:background="@drawable/background_button"
                android:onClick="onSubCabinetLockerButtonClick"
                android:text="@string/sub_board_lock"
                android:textColor="@color/white"
                android:textSize="28px"
                app:layout_constraintEnd_toEndOf="@+id/btnSubBoard"
                app:layout_constraintStart_toStartOf="@+id/btnSubBoard"
                app:layout_constraintTop_toBottomOf="@+id/btnSubBoard" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLocker"
                android:layout_width="220px"
                android:layout_height="wrap_content"
                android:background="@drawable/background_button"
                android:onClick="onLockerButtonClick"
                android:text="@string/unlock"
                android:textColor="@color/white"
                android:textSize="28px"
                app:layout_constraintEnd_toEndOf="@+id/btnLockManage"
                app:layout_constraintStart_toStartOf="@+id/btnLockManage"
                app:layout_constraintTop_toBottomOf="@+id/btnLockManage" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnFan"
                android:layout_width="220px"
                android:layout_height="wrap_content"
                android:background="@drawable/background_button"
                android:onClick="onFanButtonClick"
                android:text="@string/fan_start"
                android:textColor="@color/white"
                android:textSize="28px"
                app:layout_constraintEnd_toEndOf="@+id/btnLocker"
                app:layout_constraintStart_toStartOf="@+id/btnLocker"
                app:layout_constraintTop_toBottomOf="@+id/btnLocker" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="1000px"
            android:layout_height="wrap_content"
            android:background="@drawable/background_input_area"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/llSubBoardStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#40000000"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal"
                android:padding="16px"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/llFanStatus">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llFanStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal"
                android:padding="16px"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/llAC">

                <TextView
                    android:id="@+id/tvFanStatusLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fan_status"
                    android:textColor="@color/white"
                    android:textSize="32px" />

                <ImageView
                    android:id="@+id/ivFanStatusValue"
                    android:layout_width="24px"
                    android:layout_height="24px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="40px"
                    android:layout_marginRight="40px"
                    android:src="@drawable/ic_red_circle"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llAC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#40000000"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal"
                android:padding="16px"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/llPG">

                <TextView
                    android:id="@+id/tvACLabel"
                    android:layout_width="130px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0px"
                    android:layout_marginRight="30px"
                    android:gravity="center"
                    android:text="@string/ac_status"
                    android:textColor="@color/white"
                    android:textSize="32px" />

                <ImageView
                    android:id="@+id/ivACStatus"
                    android:layout_width="48px"
                    android:layout_height="48px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:src="@drawable/ic_run"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/ivACCtrlOption"
                    android:layout_width="48px"
                    android:layout_height="48px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:src="@drawable/ic_auto"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/ivACWorkOption"
                    android:layout_width="48px"
                    android:layout_height="48px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="10px"
                    android:src="@drawable/ic_refrigeration"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/tvACTempValue"
                    android:layout_width="95px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5px"
                    android:layout_marginRight="10px"
                    android:background="@drawable/background_edit_normal"
                    android:gravity="center"
                    android:padding="5px"
                    android:textColor="@color/black"
                    android:textSize="32px" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="90px"
                    android:layout_height="28px"
                    android:layout_marginLeft="0px"
                    android:layout_marginRight="0px"
                    android:cropToPadding="true"
                    android:src="@drawable/ic_celsius"
                    tools:ignore="ContentDescription" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/llPG"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal"
                android:padding="16px"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/llTVOCs">

                <TextView
                    android:id="@+id/tvFGLabel"
                    android:layout_width="130px"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/flammable_gas"
                    android:textColor="@color/white"
                    android:textSize="32px" />

                <TextView
                    android:id="@+id/tvFGValueA"
                    android:layout_width="200px"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10px"
                    android:layout_marginEnd="10px"
                    android:background="@drawable/background_edit_normal"
                    android:gravity="center"
                    android:padding="5px"
                    android:textColor="@color/black"
                    android:textSize="32px" />

                <TextView
                    android:id="@+id/tvFGValueB"
                    android:layout_width="200px"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10px"
                    android:layout_marginEnd="10px"
                    android:background="@drawable/background_edit_normal"
                    android:gravity="center"
                    android:padding="5px"
                    android:textColor="@color/black"
                    android:textSize="32px" />

                <TextView
                    android:layout_width="90px"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/ppm"
                    android:textColor="@color/white"
                    android:textSize="32px" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llTVOCs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#40000000"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal"
                android:padding="16px"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/llHumidity">

                <TextView
                    android:id="@+id/tvTVOCsLabel"
                    android:layout_width="130px"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/tvocs"
                    android:textColor="@color/white"
                    android:textSize="32px" />

                <TextView
                    android:id="@+id/tvTVOCs1Value"
                    android:layout_width="200px"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10px"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/background_edit_normal"
                    android:gravity="center"
                    android:padding="5px"
                    android:textColor="@color/black"
                    android:textSize="32px" />

                <TextView
                    android:id="@+id/tvTVOCs2Value"
                    android:layout_width="200px"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10px"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/background_edit_normal"
                    android:gravity="center"
                    android:padding="5px"
                    android:textColor="@color/black"
                    android:textSize="32px" />

                <TextView
                    android:layout_width="90px"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/ppm"
                    android:textColor="@color/white"
                    android:textSize="32px" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llHumidity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal"
                android:padding="16px"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/llTemperature">

                <TextView
                    android:id="@+id/tvHumidityLabel"
                    android:layout_width="130px"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/humidity"
                    android:textColor="@color/white"
                    android:textSize="32px" />

                <TextView
                    android:id="@+id/tvHumidityValueA"
                    android:layout_width="200px"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10px"
                    android:layout_marginEnd="10px"
                    android:background="@drawable/background_edit_normal"
                    android:gravity="center"
                    android:padding="5px"
                    android:textColor="#ff8400"
                    android:textSize="32px" />

                <TextView
                    android:id="@+id/tvHumidityValueB"
                    android:layout_width="200px"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10px"
                    android:layout_marginEnd="10px"
                    android:background="@drawable/background_edit_normal"
                    android:gravity="center"
                    android:padding="5px"
                    android:textColor="#ff8400"
                    android:textSize="32px" />

                <ImageView
                    android:layout_width="90px"
                    android:layout_height="28px"
                    android:cropToPadding="true"
                    android:src="@drawable/ic_percent_sign"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llTemperature"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#40000000"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal"
                android:padding="16px"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/split">

                <TextView
                    android:id="@+id/tvTemperatureLabel"
                    android:layout_width="130px"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/temperature"
                    android:textColor="@color/white"
                    android:textSize="32px" />

                <TextView
                    android:id="@+id/tvTemperatureValueA"
                    android:layout_width="200px"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10px"
                    android:layout_marginEnd="10px"
                    android:background="@drawable/background_edit_normal"
                    android:gravity="center"
                    android:padding="5px"
                    android:textColor="#ff4200"
                    android:textSize="32px" />

                <TextView
                    android:id="@+id/tvTemperatureValueB"
                    android:layout_width="200px"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10px"
                    android:layout_marginEnd="10px"
                    android:background="@drawable/background_edit_normal"
                    android:gravity="center"
                    android:padding="5px"
                    android:textColor="#ff4200"
                    android:textSize="32px" />

                <ImageView
                    android:layout_width="90px"
                    android:layout_height="28px"
                    android:cropToPadding="true"
                    android:src="@drawable/ic_celsius"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

            <View
                android:id="@+id/split"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="8dp"
                android:background="#0c729d"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/llTitle" />

            <LinearLayout
                android:id="@+id/llTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32px"
                android:layout_marginTop="8px"
                android:layout_marginEnd="32px"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal"
                android:padding="16px"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ivAlert"
                    android:layout_width="32px"
                    android:layout_height="32px"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_red_circle"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/app_name"
                    android:textColor="#ff8400"
                    android:textSize="48px" />

                <TextView
                    android:id="@+id/tvSetup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:onClick="onSettingButtonClick"
                    android:text="@string/setting"
                    android:textColor="@color/white"
                    android:textSize="32px"
                    tools:ignore="TouchTargetSizeCheck" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:theme="@style/Theme.CabinetManager.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tool_bar_height"
            android:background="@android:color/transparent"
            android:padding="16px"
            app:popupTheme="@style/Theme.CabinetManager.PopupOverlay">

            <TextView
                android:id="@+id/toolbar_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:text=""
                android:textColor="@color/white"
                android:textSize="24px" />

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/tool_bar_title_height"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/toolbar_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:text=""
                android:textColor="@color/white"
                android:textSize="24px" />
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>