<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:width="3px" android:color="@color/blue_button_pressed" />
            <corners android:radius="3px" />
            <padding android:bottom="10px" android:left="10px" android:right="10px" android:top="10px" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <solid android:width="3px" android:color="@color/blue_button_pressed" />
            <corners android:radius="3px" />
            <padding android:bottom="10px" android:left="10px" android:right="10px" android:top="10px" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <solid android:width="3px" android:color="@android:color/darker_gray" />
            <corners android:radius="3px" />
            <padding android:bottom="10px" android:left="10px" android:right="10px" android:top="10px" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:width="3px" android:color="@color/blue_button_normal" />
            <corners android:radius="3px" />
            <padding android:bottom="10px" android:left="10px" android:right="10px" android:top="10px" />
        </shape>
    </item>
</selector>