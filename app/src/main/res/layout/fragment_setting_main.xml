<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/setting_list"
    style="?android:attr/textAppearanceLarge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="24dp"
    android:textIsSelectable="true"
    tools:context=".ui.setting.SettingMainFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnHardwareManage"
            android:layout_width="400px"
            android:layout_height="wrap_content"
            android:background="@drawable/background_button"
            android:padding="24px"
            android:text="@string/set_value_management"
            android:textColor="@color/white"
            android:textSize="40px" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCabinetSet"
            android:layout_width="400px"
            android:layout_height="wrap_content"
            android:layout_marginTop="64px"
            android:background="@drawable/background_button"
            android:padding="24px"
            android:text="@string/title_activity_cabinet_name"
            android:textColor="@color/white"
            android:textSize="40px"
            android:visibility="visible" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginTop="64px"
            android:id="@+id/btnHardwareSetup"
            android:layout_width="400px"
            android:layout_height="wrap_content"
            android:background="@drawable/background_button"
            android:padding="24px"
            android:text="@string/hardware_setup"
            android:textColor="@color/white"
            android:textSize="40px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="64dp"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAdminLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_button"
            android:padding="24px"
            android:text="管理员切换"
            android:textColor="@color/white"
            android:textSize="40px"
            android:visibility="visible" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnOperatorLogin"
            android:layout_width="400px"
            android:layout_height="wrap_content"
            android:layout_marginTop="64px"
            android:background="@drawable/background_button"
            android:padding="24px"
            android:text="操作员切换"
            android:textColor="@color/white"
            android:textSize="40px"
            android:visibility="visible" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnFCReset"
            android:layout_width="400px"
            android:layout_height="wrap_content"
            android:layout_marginTop="64px"
            android:background="@drawable/background_button"
            android:padding="24px"
            android:text="@string/init"
            android:textColor="@color/white"
            android:textSize="40px" />

    </LinearLayout>

</LinearLayout>