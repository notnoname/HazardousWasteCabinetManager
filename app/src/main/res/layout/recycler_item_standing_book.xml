<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/background_info_area"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="8dp"
    android:paddingTop="10dp"
    android:paddingEnd="8dp"
    android:paddingBottom="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/csDetailInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvCreateTimeValue"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvChemicalNameValue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvChemicalNameValue" />

        <ImageView
            android:id="@+id/tvCreateTimeLabel"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="4dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_date"
            app:layout_constraintBottom_toBottomOf="@+id/tvCreateTimeValue"
            app:layout_constraintEnd_toStartOf="@+id/tvCreateTimeValue"
            app:layout_constraintTop_toTopOf="@+id/tvCreateTimeValue" />

        <TextView
            android:id="@+id/tvWeightValue"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvConNoValue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvConNoValue" />

        <ImageView
            android:id="@+id/tvWeightLabel"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="4dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_weight"
            app:layout_constraintBottom_toBottomOf="@+id/tvConNoValue"
            app:layout_constraintEnd_toStartOf="@+id/tvWeightValue"
            app:layout_constraintTop_toTopOf="@+id/tvConNoValue" />

        <TextView
            android:id="@+id/tvDeviceName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvConNoValue"
            app:layout_constraintEnd_toStartOf="@+id/tvWeightLabel"
            app:layout_constraintStart_toEndOf="@+id/tvDeviceLabel"
            app:layout_constraintTop_toTopOf="@+id/tvConNoValue" />

        <ImageView
            android:id="@+id/tvDeviceLabel"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="16dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_cell"
            app:layout_constraintBottom_toBottomOf="@+id/tvConNoLabel"
            app:layout_constraintStart_toEndOf="@+id/tvConNoValue"
            app:layout_constraintTop_toTopOf="@+id/tvConNoLabel" />

        <TextView
            android:id="@+id/tvConNoValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="100dp"
            android:maxWidth="160dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvConNoLabel"
            app:layout_constraintStart_toEndOf="@+id/tvConNoLabel"
            app:layout_constraintTop_toTopOf="@+id/tvConNoLabel" />

        <ImageView
            android:id="@+id/tvConNoLabel"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="4dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_container_no"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvChemicalNameValue" />

        <TextView
            android:id="@+id/tvChemicalNameValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:padding="3dp"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="#f18a34"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/tvCreateTimeLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnMore"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@drawable/background_button"
        android:text="加载更多"
        android:textColor="@color/white"
        android:textSize="14sp"
        tools:ignore="HardcodedText,InefficientWeight" />
</LinearLayout>